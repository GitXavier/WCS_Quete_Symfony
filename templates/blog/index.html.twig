{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <div class="jumbotron ">
        <h1 class="col-auto text-center">Listes des articles</h1>
        <a href="{{ path('app_index') }}">Retour à la page d'accueil</a>
    </div>

    <div class="container">
        {% for article in articles %}
            <div>
                <h2>{{ loop.index }} /
                    <a href="{{ path('blog_show', { 'slug': article.id }) }}">{{ article.title}}</a>
                    - Category : {{ article.category.name }}</h2><br>
                <h2>Slug: {{ article.slug }}</h2>
                <h4>
                    {% for tag in article.tags %}
                        <li><a href="/tag/{{ tag.name }} ">{{ tag.name }}</a></li>
                    {% else %}
                        <li>No tags for this article</li>
                    {% endfor %}
                </h4>
                <br>
                <p>{{ article.content }}</p>
            </div>
        {% else %}
            Aucun article trouvé.
        {% endfor %}
    </div>

{% endblock %}